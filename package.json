{
  "name": "personal-website",
  "scripts": {
    "dev": "firebase emulators:start --only hosting",
    "dev:all": "firebase emulators:start",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint": "eslint . --fix",
    "lint:check": "eslint ."
  },
  "devDependencies": {
    "@prettier/plugin-xml": "^3.4.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "firebase-tools": "^13.7.1",
    "prettier": "^3.2.5"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "avoid",
    "htmlWhitespaceSensitivity": "strict",
    "plugins": [
      "@prettier/plugin-xml"
    ],
    "xmlWhitespaceSensitivity": "ignore",
    "proseWrap": "always"
  },
  "eslintConfig": {
    "env": {
      "es6": true
    },
    "extends": [
      "prettier"
    ]
  }
}
